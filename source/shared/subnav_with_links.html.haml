.page-header
	.inline-block
		%h1.no-margin{:style=>"font-weight:300;"}
			= current_page.data.title
%ul.nav.nav-pills.navbar-right.sub-nav-links
	- data.send(current_page.data.subnav_data).link_title_list.each do |ltl|
		%li{:class => (current_page.data.title === ltl.title) ? "active" : ""}
			%a{:href=>"#{ltl.link}"}
				= ltl.title
%p
	= current_page.data.description