:javascript
	$(document).ready(function() {
		$.extend( $.fn.dataTable.defaults, {
			"bLengthChange": false
		} );


		$('#table').dataTable().columnFilter({aoColumns:[
				{ sSelector: "#nameFilter", type:"select",bSmart: true  },
				{ sSelector: "#typeFilter", type:"select" },
				{ sSelector: "#jobRoleFilter", type:"select" },
				{ sSelector: "#statusFilter", type:"select" },
				{ sSelector: "#testsFilter", type:"select" },
				{ sSelector: "#dateFilter", type:"date-range" },
				null,
				]}
			);


		$.datepicker.regional[""].dateFormat = 'D M dd, yy';
		$.datepicker.setDefaults($.datepicker.regional['']);

		$('#filter-popover').popover({ 
			html : true, 
			content: function() {
			return $('#popover_content_wrapper').html();
		}
		});

	} );


