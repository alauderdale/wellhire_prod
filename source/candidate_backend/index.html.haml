;;;

"title": "My Tests", 
"layout": "candidate",
"activeclass": "tests"
	
;;;


%section
	.container
		.row
			.col-lg-12
				.alert.alert-success
					%button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-hidden"=>"true"}
						&times;
					You have completed the test
					%a{"data-toggle"=>"modal", :href=>"/tests/show", "data-target"=>"#showTestModalNoStart"}
						Business Communication II 
				.page-header.half-margin-bottom
					%h1.no-margin-bottom
						My Tests
				%p
					Listed below are the assessments assigned to you for completion
				.alert.alert-info
					%strong
						Heads Up!
					The number of times you leave a test which is already in progress will be tracked by the system.
				.alert.alert-basic
					.media
						.pull-left
							%h1.social-font-name.half-margin-right.no-margin-bottom{:style=>"font-size:4em;"}
								i
						.media-body
							%strong
								Include your LinkedIn profile along with your assessments
							Click 
							%a{:href=>"/candidate_backend/profile/linkedin"}
								here 
							to be redirected to the LinkedIn website to provide your signin credentials 
		.row
			.col-lg-12
				.double-margin-bottom
					.page-header.half-margin-bottom
						%h3.no-margin-bottom
							Tests to Complete
					%p
						Listed below are the assessments assigned to you for completion
				-3.times do
					.candidate-test-thumb-container.double-margin-bottom
						.row
							.col-sm-1
								%i.fa.fa-file-text.candidate-test-icon-default.large-icon
							.col-sm-8
								%h4.no-margin-bottom
									Business Communication II
								%p.text-muted
									%small
										Assigned on Feb 19, 2014
								%p
									Business Communication measures knowledge of communicating in the workplace. It measures the skills necessary to communicate effectively with clients and coworkers at all levels....
									%a{"data-toggle"=>"modal", :href=>"candidate_backend/tests/start", "data-target"=>"#showTestModal"}
										More info
							.col-sm-3
								%a.btn.btn-success.btn-lg{"data-toggle"=>"modal", :href=>"candidate_backend/tests/start", "data-target"=>"#showTestModal"}
									Get Started
						%hr
		.row
			.col-lg-12
				.double-margin-bottom
					.page-header.half-margin-bottom
						%h3.no-margin-bottom
							My Completed Tests
				-3.times do
					.candidate-test-thumb-container.double-margin-bottom
						.row
							.col-sm-1
								%i.fa.fa-check-square-o.candidate-test-icon-success.large-icon
							.col-sm-11
								%h4.no-margin-bottom
									Business Communication I
								%p.text-success
									%small
										Completed on Feb 19, 2014
						%hr

