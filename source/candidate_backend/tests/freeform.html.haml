"title": "Test: Business Essentials", 
"layout": "candidate",
"activeclass": "tests"
	
;;;


%section
	.container
		.row
			.col-lg-12
				.page-header
					%h1.no-margin-bottom.pull-left
						Test In Progress
					.clearfix
				.test-question-container.margin-top
					.margin-bottom
						%p
							Freeform Questions
					.test-freeform.margin-bottom
						.row
							.col-sm-6
								-2.times do
									%form.margin-bottom
										.form-group
											%h4
												1. What's Your Favorite...
											%textarea.form-control{:rows=>"5"}
											.dotted-border.well.quarter-margin-top
												%p
													%i.fa.fa-video-camera
													Answer with a video by 
													%a{:href=>"#"}
														Selecting files from your computer... 
													or
													%a{:href=>"#"}
														Capturing a video now...
							.col-sm-6
				%hr
				.test-footer
					.row
						.col-sm-4
						.col-sm-8
							%p.pull-right
								%a.btn.btn-lg.btn-success.margin-bottom{:href=>"/candidate_backend/tests/feedback"}
									Submit Responses & Give Feedback
									%i.fa.fa-long-arrow-right

				

