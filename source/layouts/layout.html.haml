    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "Wellhire Admin"
    = stylesheet_link_tag "lib/bootstrap/bootstrap" ,"lib/fancybox/jquery.fancybox.css", "lib/font-awesome/font-awesome" ,"style"
    %link{href: "images/favicon.ico", rel: "shortcut icon"}
    / %script{:src => "http://code.jquery.com/jquery-latest.min.js", :type => "text/javascript"}
    = javascript_include_tag"jquery","lib/jquery.fancybox.pack.js","helpers/jquery.fancybox-media.js"," lib/bootstrap", "scripts"
  %body{:class => page_classes}
    = partial "layouts/main_menu"
    /end menu
    = yield
    /end main content
    = partial "layouts/footer"
    /end footer